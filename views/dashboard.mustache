<html>
    <head>
        <link rel="stylesheet" href="/css/styles.css" />
    </head>

    <body>
        <div class="dashboard">
            <h1>Dashboard</h1>
            <div class="actions">
                <a href="/blog/dashboard">Dashboard</a>
                <a href="/blog/view-all">View all posts</a>
                <a href="/logout">Logout</a>
            </div>

            <div class="blog-form">
                <h2>Create a New Post</h2>

                <form method="POST" action="/blog/create-post">
                    <input type="text" placeholder="Title" name="title" />
                    <input type="text" placeholder="What's on your mind?" name="body" />
                    <input type="text" placeholder="Category" name="category" />
                    <button class="form-button">Post</button>
                </form>
            </div>

                <ul>
                {{#allPosts}}
                    <li>
                        <h3>{{title}}</h3>
                        <p>{{body}}</p>
                        <p>Posted by {{user.username}} | {{createdAt}}</p>
                        <p>Category: <b>{{category}}</b></p>
                        
                        <div class="actions">
                        <a href="/blog/post/{{id}}">View Post</a></p>
                        <a href="/blog/edit/{{id}}">Edit</a>
                        <form method="POST" action="/blog/delete/{{id}}">
                            <button class="delete-button">Delete</button>
                        </form>
                        </div>
                    </li>
                {{/allPosts}}
                </ul>
        </div>
    </body>
</html>